<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <%= link_to "/", class: "navbar-brand" do %>
    <div class="row">
      <%= image_tag "PS_logo.png", style: "height:40px;" %>
      <p class="pl-3 pt-2">Professional Services you need</p>
    </div>
    <% end %>

 <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="d-flex">
      <div class="align-middle d-flex justify-content-center align-items-center font-weight-bold">
        <!-- if user_signed_in? -->
        <% if user_signed_in? %>

          <%= current_user.first_name %>
          <%= current_user.last_name %>

      <div class="align-middle d-flex justify-content-center align-items-center ml-5" >
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>

      </div>
      <div>
         <ul class="no-margin">
          <li class="nav-item dropdown">
            <%= image_tag "three_lines_menu.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "My bookings", consumer_contracts_path, class: "dropdown-item" %>
              <% if current_user.services.any? %>
                <%= link_to "My service requests", provider_contracts_path, class: "dropdown-item" %>
                <%= link_to "My services", provider_services_path, class: "dropdown-item" %>
              <% end %>
              <%= link_to "Add a new service", new_service_path, class: "dropdown-item" %>

              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "align-middle d-flex justify-content-center align-items-center ml-5" %>
          </li>
        <% end %>
      </ul>

</div>


    </div>
  </div>
</div>
</div>
