<div class="service_banner_no_picture">
  <div class="container">
    <h1 class="ml-5 pl-5">Forgot your awesome password?</h1>
  </div>
</div>
<div class="container">
  <div class="form-ps mt-2 mb-2" style="width:50%">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me the reset password instructions dude!" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
